<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/half_dynamic_spacing"
  tools:context=".controller.GameFragment">

  <edu.cnm.deepdive.fireman.view.TerrainView
    android:id="@+id/terrain"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_dynamic_spacing"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/view_stats"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/view_stats_description"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:useCompatPadding="true"/>

  <ImageView
    android:id="@+id/compass_north"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/north_description"
    app:layout_constraintTop_toBottomOf="@id/terrain"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/arrow_up"/>

  <ImageView
    android:id="@+id/compass_east"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/east_description"
    app:layout_constraintTop_toBottomOf="@id/terrain"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/arrow_right"/>

  <ImageView
  android:id="@+id/compass_south"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:contentDescription="@string/east_description"
  app:layout_constraintTop_toBottomOf="@id/terrain"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  android:src="@drawable/arrow_down"/>


  <ImageView
    android:id="@+id/compass_west"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@string/east_description"
    app:layout_constraintTop_toBottomOf="@id/terrain"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/arrow_left"/>

</androidx.constraintlayout.widget.ConstraintLayout>